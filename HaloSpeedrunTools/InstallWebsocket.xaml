<Window x:Class="HaloSpeedrunTools.InstallWebsocket"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HaloSpeedrunTools"
        mc:Ignorable="d"
        Title="Install OBS Websocket" Height="144.667" Width="300" ResizeMode="NoResize" Topmost="True">
    <Grid Margin="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="122*"/>
            <ColumnDefinition Width="25*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <TextBlock Margin="10,10,0,28" Text="OBS Installation Directory:"/>
        <TextBox x:Name="pathURLText" Margin="10,31,0,5" Text="C:\Program Files\obs-studio"/>
        <Button x:Name="Browse" Margin="0,31,10,5" Click="Browse_Click" Content="..." Grid.Column="1"/>

        <Button x:Name="InstallOBSWS" Grid.ColumnSpan="2" Margin="10" Grid.Row="1" Click="InstallOBSWS_Click" Content="Install obs-websocket"/>
    </Grid>
</Window>
